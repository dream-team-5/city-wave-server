<div id="<%= dom_id wish %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
  <%= wish.text.truncate 80, separator: ' ' %>

  <span>
    <%= link_to 'View', [:admin, wish], remote: true, class: 'btn btn-outline-info btn-sm' %>

    <%= link_to 'Edit', [:edit, :admin, wish], remote: true, class: 'btn btn-outline-secondary btn-sm' %>

    <%= link_to 'Delete', [:admin, wish], remote: true, method: :delete, class: 'btn btn-outline-danger btn-sm' %>
  </span>
</div>
